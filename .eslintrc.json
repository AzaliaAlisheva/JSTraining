{
    "extends": [
      "eslint:recommended",
      "plugin:svelte3/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "svelte3",
      "@typescript-eslint"
    ],
    "overrides": [
      {
        "files": ["src/**/*.{js,ts,svelte}"],
        "processor": "svelte3/svelte3"
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "settings": {
      "svelte3/ignore-styles": () => true
    }
  }